  <script>
    (function(){
      const form = document.getElementById('admissionForm');
      const submitBtn = document.getElementById('submitBtn');
      const resetBtn = document.getElementById('resetBtn');
      const status = document.getElementById('formStatus');

      function validate(){
        const firstName = document.getElementById('firstName').value.trim();
        const lastName = document.getElementById('lastName').value.trim();
        const email = document.getElementById('email').value.trim();
        const phone = document.getElementById('phone').value.replace(/\D/g,'');
        const dob = document.getElementById('dob').value;
        const percentage = parseFloat(document.getElementById('percentage').value);

        if(!firstName) return 'First name required';
        if(!lastName) return 'Last name required';
        if(!/^\S+@\S+\.\S+$/.test(email)) return 'Enter valid email';
        if(!/^[6-9]\d{9}$/.test(phone)) return 'Enter valid 10-digit Indian mobile number';
        if(!dob) return 'Date of birth is required';
        if(Number.isNaN(percentage) || percentage<0 || percentage>100) return 'Enter valid percentage 0-100';
        return '';
      }

      submitBtn.addEventListener('click', function(e){
        e.preventDefault();
        status.textContent = '';
        const err = validate();
        if(err){ status.textContent = err; status.style.color = 'crimson'; return; }

        submitBtn.disabled = true; submitBtn.textContent = 'Submitting...';

        // Simulate a server call (replace with real API endpoint)
        setTimeout(()=>{
          submitBtn.disabled = false; submitBtn.textContent = 'Submit Application';
          status.style.color = 'green';
          status.textContent = 'Application submitted successfully. We will contact you shortly.';
          form.reset();
        },1200);
      });

      resetBtn.addEventListener('click', function(){
        form.reset(); status.textContent = ''; status.style.color = 'var(--muted)';
      });

      // Small enhancement: prefill course if URL has ?course=...
      const params = new URLSearchParams(location.search);
      if(params.get('course')){
        const select = document.getElementById('course');
        for(const opt of select.options){ if(opt.text.includes(params.get('course'))){ opt.selected = true; break }}
      }
    })();
  </script>
